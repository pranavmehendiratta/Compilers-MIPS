int func (int a) {
    int b;
    cout << "Inside new function";
    cout << "\n";
    b = 10;
    a = a - 3;
    
    if (a >= 3) {
	a++;
    } else {
	a--;
    }
    
    a = a + b;
    return a;
}

int whilefunc() {
    int i;
    bool c;
    i = 0;
    c = true;
    while(i < 10) {
	i++;
    }
    
    if (c) {
	i++;
    }
    
    return i;


}

